$projects-height = 440px

.projects_container
  overflow-x: scroll
  overflow-y: hidden
#projects
  position: relative
  margin: 0
  padding: 0
  > li
    float: left
    width: 265px
    height: $projects-height
    padding: 10px
    background: rgba(#282828, 0.8)
    border-right: 1px solid rgba(#3a3a3a, 0.7)
    border-left: 1px solid rgba(#505050, 0.7)

    // Individual project block style
    ul
      margin: 0
      padding: 0

      > li
        padding: 7px 0
        border-bottom: 1px solid rgba(#333, 0.95)

        h2
          margin: 6px 0
        h3
          margin: 4px 0
        label
          font-weight: 700

        ul
          li
            padding: 1px 0
            border: 0

$blue = #2e4150
#ticker
  overflow: hidden
  width: 100%
  height: 58px
  margin: 0 0 0 0
  background: rgba(darken($blue, 30%), 1)
  border-top: 1px solid #5c5c5c
  border-bottom: 1px solid #888
  font-size: 15px
  font-weight: 700
  font-style: italic

  ul#tweets
    position: relative
    overflow: hidden
    width: 500%
    height: 20px
    margin: 18px 0 0
    padding: 0

    li
      position: relative
      display: inline-block
      float: left
      min-width: 400px
      height: 20px
      margin-right: 35px
      list-style: none
      text-decoration: none

      div
        display: inline-block

        .author-meta
          color: #4c6c85
          font-weight: 700

        .handle
          color: #4c6c85

        .hashtag
          color: #4c6c85
          text-decoration: none

        .twitteruser
          color: #f47a4b
          text-decoration: none

        .username, a
          color: #f47a4b
          text-decoration: none
